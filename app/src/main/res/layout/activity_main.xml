<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroung_moon"
    android:alpha="0.98">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="75dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Full Name :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="121dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Email :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="168dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Phone Number:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="220dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Password"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_centerVertical="true"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Gender:"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton_famle"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Famle" />

    <RadioButton
        android:id="@+id/radioButton_male"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="61dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Male" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="228dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Date Of Birth:"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_photo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="149dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="choose your photo" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:alpha="0.6"
        android:background="@drawable/profile_text_shape"
        android:text="Submit" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignStart="@+id/radioButton_famle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#c7ecee" />

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignStart="@+id/radioButton_famle"
        android:ems="10"
        android:inputType="date"
        android:textColor="#c7ecee" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="201dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/radioButton_famle"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="-7dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#c7ecee" />

    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton_famle"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginTop="-15dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#c7ecee" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton_famle"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#c7ecee"
        android:textSize="18sp" />
</RelativeLayout>